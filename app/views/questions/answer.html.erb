<h1>Coach Chatbox</h1>
<div class="container">
  <div class="cadre question">
    <p><%= @question %></p>
    <p><i>-You</i></p>

  </div>

  <div class="cadre answer">
    <p><%= @answer %></p>
    <p><i>-Your coach</i></p>

  </div>

  <form action="/answer" method="get">
    <input class="form-control" type="text" name="question" placeholder="What is your question?">
    <input class="btn btn-info" type="submit">
  </form>
</div>
